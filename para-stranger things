#define your function with parameters
use_bpm 160
use_synth :saw

define :play_eighth_notes do |n1, n2, n3, n4, sl|
  play n1
  sleep sl
  play n2
  sleep sl
  play n3
  sleep sl
  play n4
  sleep sl
end

play_eighth_notes :c2, :e2, :g2, :b2, 0.5

define :play_eighth_notes1 do |n1, n2, n3, n4, sl|
  play n1
  sleep sl
  play n2
  sleep sl
  play n3
  sleep sl
  play n4
  sleep sl
end
play_eighth_notes1 :c3, :b2, :g2, :e2, 0.5
