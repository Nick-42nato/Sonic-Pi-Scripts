#canon in D
use_bpm 70
use_synth :piano
i=0
a_variable='a'
a_variable='b'
a_variable='c'
a = [:E5, :D5, :C5, :B4, :A4, :G4, :A4, :B4]
b = [:C3, :G3, :A3, :E2, :F2, :A2, :F2, :G2]
c = [1.5, 1.5, 1.5, 1.5, 1.5, 1.5, 1.5, 1.5]
#the array lists the different notes and sleep times for the treble clef and bass represented by variables. a being the treble clef. b being the treble bass, and c is the sleep times for each treble
canon="C:/Users/nicholas_fortunato/Desktop/canon1.wav"
canon_end="C:/Users/nicholas_fortunato/Desktop/canon_end.wav"
#part 1 is where I call the array to play the variables
i=0
8.times do
  play a[i], sustain: 3
  play b[i], sustain: 3
  sleep c[i]
  i=i+1
end
#part 2 is where I defined the melody to play
define :melody do
  play :E5, sustain: rrand(2,3)
  play :C5, sustain: 3
  play :G4, sustain: 3
  play :C3, sustain: 3
  sleep 1.5
  play :D5, sustain: 3
  play :B4, sustain: 3
  play :G4, sustain: 3
  play :G3, sustain: 3
  sleep 1.5
  play :C5, sustain: 3
  play :A4, sustain: 3
  play :E5, sustain: 3
  play :A3, sustain: 3
  sleep 1.5
  play :B4, sustain: 3
  play :G4, sustain: 3
  play :E5, sustain: 3
  play :E2, sustain: 3
  sleep 1.5
  play :A4, sustain: 3
  play :F4, sustain: 3
  play :C4, sustain: 3
  play :F2, sustain: 3
  sleep 1.5
  play :G4, sustain: 3
  play :E4, sustain: 3
  play :C4, sustain: 3
  play :A2, sustain: 3
  sleep 1.5
  play :A4, sustain: 3
  play :F4, sustain: 3
  play :C4, sustain: 3
  play :F2, sustain: 3
  sleep 1.5
  play :B4, sustain: 3
  play :G4, sustain: 3
  play :D4, sustain: 3
  play :G3, sustain: 3
  sleep 1.5
end
